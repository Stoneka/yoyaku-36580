<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">商品の情報を入力</h2>
    <%= form_with model: @item , local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 商品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        商品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id: 'item_image_id'  %>
      </div>
      <div id="image-list"></div>
    </div>
    <%# /商品画像 %>
    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        商品名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :item_name, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          商品の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :explanation, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）例）生クリームを使用したケーキです。いちごをふんだんに使用しているのでいちごが好きな方におすすめです。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>

    <%# 商品の詳細 %>
    <div class="items-detail">
      <div class="weight-bold-text">商品の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          サイズ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:size_id, Size.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
    </div>
    <%# /商品の詳細 %>

    <%# 販売価格 %>
    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>販売価格<br></span>
        <a class="question" href="#">?</a>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen"></span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）300" %>円
        </div>

      </div>
    </div>
    <%# /販売価格 %>

    <%# 栄養成分表示 %>
    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>栄養成分<br></span>
        <a class="question" href="#">?</a>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>エネルギー</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen"></span>
          <%= f.text_field :calorie, class:"price-input", id:"item-price", placeholder:"例）300" %>g
        </div>
        <div class="price-content">
          <div class="price-text">
            <span>たんぱく質</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen"></span>
          <%= f.text_field :protein, class:"price-input", id:"item-price", placeholder:"例）300" %>g
        </div>
        <div class="price-content">
          <div class="price-text">
            <span>脂質</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen"></span>
          <%= f.text_field :fat, class:"price-input", id:"item-price", placeholder:"例）300" %>g
        </div>
        <div class="price-content">
          <div class="price-text">
            <span>炭水化物</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen"></span>
          <%= f.text_field :carb, class:"price-input", id:"item-price", placeholder:"例）300" %>g
        </div>
        <div class="price-content">
          <div class="price-text">
            <span>食塩相当量</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen"></span>
          <%= f.text_field :salt, class:"price-input", id:"item-price", placeholder:"例）300" %>g
        </div>

      </div>
    </div>
    <%# /栄養成分表示 %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "商品を登録する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#"></a></li>
      <li><a href="#"></a></li>
      <li><a href="#"></a></li>
    </ul>
    <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎Yoyaku,Inc.
    </p>
  </footer>
</div>