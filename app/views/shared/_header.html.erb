<% else %>
<li><%= link_to( "カート", "#") %></li>
<% end %>
<% end %>
<%# /カート機能 %>
<%# ユーザーのみ使用可能な機能%>
<% if customer_signed_in? %>
<% if current_customer.admin? %>
<li><%= link_to( "商品管理", manage_items_path) %></li>
<li><%= link_to( "予約管理", reserve_path) %></li>
<% end %>
<% end %>
<%# /ユーザーのみ使用可能な機能%>
</ul>

</nav>

</header>