<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @item.item_name %>
    </h2>
    <div class="item-img-content">
       <%= image_tag @item.image, class: "item-box-img" %>
      <%# if @item.order.present? %>
      <div class="sold-out">
        <span>Sold Out!!</span>
      </div>
      <%# end %>
    </div>
    <div class="item-price-box">
      <span class="item-price">
       <%= @item.price %>円
      </span>
      <span class="item-postage">
        <%= @item.size.name %>
      </span>
    </div>
    
    <%# if @item.order.present? %>
    <%# 管理者権限の有無で条件分岐に書き換えること %>
    <%# if customer_signed_in? && current_customer.id == @item.user_id %>
    <%= link_to "商品の編集", edit_item_path(@item.id), method: :get, class: "item-red-btn" %>
    <%#<p class="or-text">or</p>%>
    <%= link_to "削除", item_path(@item.id), method: :delete, class:"item-destroy" %>
    <%# elsif customer_signed_in? %>
    <%#= link_to "購入画面に進む", item_orders_path(@item.id) ,class:"item-red-btn"%>
    <%# end %>


    <div class="item-explain-box">
      <span><%= @item.explanation %></span>
    </div>

    <div class="item-explain-box">
      <span>栄養成分</span>
    </div>

    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">エネルギー</th>
          <td class="detail-value"><%= @item.calorie %>kcal</td>
        </tr>
        <tr>
          <th class="detail-item">たんぱく質</th>
          <td class="detail-value"><%= @item.protein %>g</td>
        </tr>
        <tr>
          <th class="detail-item">脂質</th>
          <td class="detail-value"><%= @item.fat %>g</td>
        </tr>
        <tr>
          <th class="detail-item">炭水化物</th>
          <td class="detail-value"><%= @item.carb %>g</td>
        </tr>
        <tr>
          <th class="detail-item">食塩相当量</th>
          <td class="detail-value"><%= @item.salt %>g</td>
        </tr>
      </tbody>
    </table>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入り 0</span>
      </div>
      <div class="report-btn">
        <%= image_tag "flag.png" ,class:"report-flag-icon" ,width:"20",height:"20"%>
        <span>不適切な商品の通報</span>
      </div>
    </div>
  </div>
  <%# /商品の概要 %>

  <%# 予約フォーム %>
  <%= form_with model:@reserve, url: item_reserves_path(@item.id), id: 'charge-form', class: 'transaction-form-wrap',local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>
    <%# 予約内容の入力 %>
    <div class='shipping-address-form'>
      <h1 class='info-input-haedline'>
        ご予約フォーム
      </h1>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">数量</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :quantity, class:"input-default", id:"quantity", placeholder:"例）123-4567", maxlength:"8" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メッセージ</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :message, class:"input-default", id:"message", placeholder:"例）横浜市緑区"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">敬称</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.radio_button :honorific, :"さん" %>
        <%= f.label :honorific, "さん", {value: :"さん", style: "display: inline-block;"} %>
        <%= f.radio_button :honorific, :"ちゃん" %>
        <%= f.label :honorific, "ちゃん", {value: :"ちゃん", style: "display: inline-block;"} %>
        <%= f.radio_button :honorific, :"くん" %>
        <%= f.label :honorific, "くん", {value: :"くん", style: "display: inline-block;"} %>
        <%= f.radio_button :honorific, :"なし" %>
        <%= f.label :honorific, "なし", {value: :"なし", style: "display: inline-block;"} %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">タイトル</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.radio_button :use_case, :"お誕生日おめでとう" %>
        <%= f.label :use_case, "お誕生日おめでとう", {value: :"お誕生日おめでとう", style: "display: inline-block;"} %>
        <%= f.radio_button :use_case, :"HappyBirthday" %>
        <%= f.label :use_case, "HappyBirthday", {value: :"HappyBirthday", style: "display: inline-block;"} %>
        <%= f.radio_button :use_case, :"祝" %>
        <%= f.label :use_case, "祝", {value: :"祝", style: "display: inline-block;"} %>
        <%= f.radio_button :use_case, :"なし" %>
        <%= f.label :use_case, "なし", {value: :"なし", style: "display: inline-block;"} %>
      </div>
    </div>
    <%# /配送先の入力 %>
    <div class='buy-btn'>
      <%= f.submit "カートへ入れる" ,class:"buy-red-btn", id:"button" %>
    </div>
  <% end %>
  <%# /予約フォーム %>

  <div class="comment-box">
    <form>
      <textarea class="comment-text"></textarea>
      <p class="comment-warn">
        相手のことを考え丁寧なコメントを心がけましょう。
        <br>
        不快な言葉遣いなどは利用制限や退会処分となることがあります。
      </p>
      <button type="submit" class="comment-btn">
        <%= image_tag "comment.png" ,class:"comment-flag-icon" ,width:"20",height:"25"%>
        <span>コメントする<span>
      </button>
    </form>
  </div>
  <div class="links">
    <a href="#" class="change-item-btn">
      ＜ 前の商品
    </a>
    <a href="#" class="change-item-btn">
      後ろの商品 ＞
    </a>
  </div>
  <a href="#" class="another-item"><%= @item.size.name%>をもっと見る</a>
</div>

<%= render "shared/footer" %>
